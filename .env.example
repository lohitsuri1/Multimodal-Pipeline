# OpenAI API Key (for script generation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Key (optional, for high-quality voice narration)
# Get your key from: https://elevenlabs.io/
# Note: gTTS (free) is used by default
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Pexels API Key (for royalty-free videos/images)
# Get your key from: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Pixabay API Key (alternative for royalty-free images)
# Get your key from: https://pixabay.com/api/docs/
PIXABAY_API_KEY=your_pixabay_api_key_here

# Video generation settings
VIDEO_DURATION_MINUTES=30
OUTPUT_DIR=output_videos
TEMP_DIR=temp_files

# Voice settings
VOICE_LANGUAGE=en
VOICE_SPEED=0.9

# Background music volume (0.0 to 1.0, relative to voice)
MUSIC_VOLUME=0.2
